{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node", "vitest/globals"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist"
	},
	"exclude": ["node_modules", "**/*.test.ts", "**/*.integration.test.ts", "**/__tests__/**/*"]
}
